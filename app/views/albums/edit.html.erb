<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center">アルバム編集</h1>

  <%= form_with model: @album, class: "space-y-4" do |f| %>
    
    <% if @album.errors.any? %>
      <% end %>

    <div>
      <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :description, "思い出のメモ", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= f.label :images, "写真を追加（変更する場合のみ）", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :images, multiple: true, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
    </div>

    <div>
      <%= f.submit "更新する", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#ff8737] hover:opacity-80 focus:outline-none cursor-pointer" %>
    </div>
  <% end %>
</div>